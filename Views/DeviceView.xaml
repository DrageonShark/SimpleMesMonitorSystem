<UserControl x:Class="WPF9SimpleMesMonitorSystem.Views.DeviceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice, Mode=TwoWay}" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding DeviceId}" Width="Auto" />
                <DataGridTextColumn Header="Name" Binding="{Binding DeviceName}" Width="*" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
                <DataGridTextColumn Header="LastUpdate" Binding="{Binding LastUpdateTime}" Width="*" />
                <DataGridTextColumn Header="Temp" Binding="{Binding CurrentTemperature}" Width="*" />
                <DataGridTextColumn Header="Pressure" Binding="{Binding CurrentPressure}" Width="*" />
                <DataGridTextColumn Header="Speed" Binding="{Binding CurrentSpeed}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Device Details" FontWeight="SemiBold" FontSize="14" />

            <Border Grid.Row="1" Padding="8" BorderBrush="#DDDDDD" BorderThickness="1" Background="White">
                <StackPanel DataContext="{Binding SelectedDevice}">
                    <TextBlock Text="Base Info" FontWeight="SemiBold" />
                    <TextBlock Text="{Binding DeviceName}" FontSize="16" />
                    <TextBlock Text="Status: {Binding Status}" Margin="0 4 0 0" />
                    <TextBlock Text="Last: {Binding LastUpdateTime}" />
                    <TextBlock Text="Temp: {Binding CurrentTemperature}" />
                    <TextBlock Text="Pressure: {Binding CurrentPressure}" />
                    <TextBlock Text="Speed: {Binding CurrentSpeed}" />
                </StackPanel>
            </Border>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border Padding="8" BorderBrush="#DDDDDD" BorderThickness="1" Background="White">
                    <StackPanel DataContext="{Binding SelectedDevice}">
                        <TextBlock Text="Events" FontWeight="SemiBold" Margin="0 0 0 8" />
                        <ListBox ItemsSource="{Binding EventLogs}" />
                    </StackPanel>
                </Border>
                <Border Grid.Column="1" Padding="8" BorderBrush="#DDDDDD" BorderThickness="1" Background="White">
                    <StackPanel DataContext="{Binding SelectedDevice}">
                        <TextBlock Text="Alarms" FontWeight="SemiBold" Margin="0 0 0 8" />
                        <ListBox ItemsSource="{Binding AlarmMessages}" />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

<Application x:Class="WPF9SimpleMesMonitorSystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WPF9SimpleMesMonitorSystem.ViewModels"
             xmlns:views="clr-namespace:WPF9SimpleMesMonitorSystem.Views"
             xmlns:lvc="http://livecharts.com">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DeviceMonitorViewModel}">
            <views:DeviceView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:OrderViewModel}">
            <views:OrderView />
        </DataTemplate>
    </Application.Resources>
</Application>
